{
  "compilerOptions": {
   
    "target": "es2016",                                
    "module": "commonjs",                           
    "resolveJsonModule": true,
    "strict": true,                                 
    "strictPropertyInitialization": false,        
    "esModuleInterop": true,                      
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,              
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
